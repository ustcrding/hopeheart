<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_weight="1"
        android:duplicateParentState="true">

        <ImageView
            android:id="@+id/switch_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/icon_yuyinbobao"/>
        />

        <TextView
            android:id="@+id/switch_name"
            style="@style/switch_item_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/switch_logo"
            android:layout_marginLeft="@dimen/padding_10" />

        <ImageView
            android:id="@+id/switch_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin"
            android:duplicateParentState="true"
            android:src="@drawable/icon_switch_on" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_stroke_little_gray" />

</LinearLayout>