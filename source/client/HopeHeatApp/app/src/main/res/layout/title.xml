<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:background="@color/common_title_color">

    <LinearLayout
        android:id="@+id/top_back_container"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/sl_title_left_btn"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin_left"
        android:paddingRight="@dimen/common_margin_right">

        <ImageView
            android:id="@+id/top_goback_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_return" />

        <TextView
            android:id="@+id/top_goback_text"
            style="@style/title_left_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/top_title_text"
        style="@style/title_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/color_white"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/ll_title_right_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sl_title_left_btn"
            android:src="@drawable/icon_data_more"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:minWidth="50dp"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text="设置"
            android:textColor="@color/btn_title_right_color"
            android:textSize="@dimen/font_size_14"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>