<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/title_activity_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/ll_verify_containter"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@color/common_stroke_little_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_verify_num"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:textColor="@color/common_main_red"
                android:textSize="@dimen/font_size_40"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_download_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/tip_vocal_pwd_downloading"
                android:textColor="@color/common_main_red"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/btn_retry"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/sl_btn_send"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/public_retry"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/black_333333"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_left_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/ll_verify_containter"
            android:gravity="center"
            android:text="@string/tip_left_times_format"
            android:textColor="@color/gray_666666"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_volume"
            android:layout_width="136dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dp"
            android:scaleType="center"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_speech_voice_mic"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/sl_btn_send"
            android:text="@string/long_press_speech"
            android:textColor="@color/day_textColor"
            android:textSize="14dp" />
    </RelativeLayout>
</LinearLayout>