<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/title_activity_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@color/markup_popup_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/pupup_window_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black_333333"
            android:textSize="17sp"
            android:text="提示"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/tv_markup_as"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black_333333"
            android:textSize="15sp"
            android:text="已选群众20人，标记为："
            android:layout_marginTop="15dp"/>
        
        <Button
            android:id="@+id/online"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="线上辅导"
            android:background="@drawable/red_button_selector"/>

        <Button
            android:id="@+id/offline"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="线下辅导"
            android:background="@drawable/green_button_selector"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:text="取消"
            android:background="@drawable/gray_button_selector"/>
    </LinearLayout>

</LinearLayout>