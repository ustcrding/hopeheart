<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/icon_robot" />

    <LinearLayout
        android:id="@+id/ll_answer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="56dp"
        android:layout_toRightOf="@+id/iv_left"
        android:background="@drawable/baymin_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_multi_answer_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="小中猜您想问以下问题"
            android:textColor="@color/black_35383d"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/ll_multi_answer_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
