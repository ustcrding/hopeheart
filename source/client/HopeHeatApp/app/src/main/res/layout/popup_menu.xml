<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/title_activity_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/cancel"
        android:textColor="@color/gray_3BC7D8"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/rescue_knowledge_category"
        android:paddingLeft="10dp"
        android:textColor="@color/black_333333"
        android:textSize="16sp"/>

    <GridView android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:descendantFocusability="blocksDescendants"
        android:numColumns="3"/>

    <TextView
        android:id="@+id/tv_sub_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/rescue_knowledge_subcategory"
        android:paddingLeft="10dp"
        android:textColor="@color/black_333333"
        android:textSize="16sp"/>

    <GridView android:id="@+id/sub_category"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:descendantFocusability="blocksDescendants"
        android:numColumns="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">
        <Button
            android:id="@+id/bt_ensure"
            android:layout_width="195dp"
            android:layout_height="45dp"
            android:background="@drawable/button_selector"
            android:text="@string/ensure"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray_2C9AB0"
            android:textSize="17sp"
            />
    </LinearLayout>

</LinearLayout>