<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/common_radius" />
            <stroke android:width="1px" android:color="@color/common_main_red" />
            <solid android:color="@color/color_white" />
            <padding android:bottom="@dimen/padding_5" android:left="@dimen/padding_10" android:right="@dimen/padding_10" android:top="@dimen/padding_5"></padding>

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/common_radius" />
            <stroke android:width="1px" android:color="@color/common_text_color" />
            <solid android:color="@color/color_white" />
            <padding android:bottom="@dimen/padding_5" android:left="@dimen/padding_10" android:right="@dimen/padding_10" android:top="@dimen/padding_5"></padding>

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/common_radius" />
            <stroke android:width="1px" android:color="@color/common_text_color" />
            <solid android:color="@color/color_white" />
            <padding android:bottom="@dimen/padding_5" android:left="@dimen/padding_10" android:right="@dimen/padding_10" android:top="@dimen/padding_5"></padding>

        </shape>
    </item>
</selector>